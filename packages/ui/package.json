{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./styles": "./src/output.css",
    "./*": "./src/*.tsx"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "build-css": "npx @tailwindcss/cli -i ./src/input.css -o ./src/output.css",
    "build-css:watch": "npx @tailwindcss/cli -i ./src/input.css -o ./src/output.css --watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@turbo/gen": "^2.4.4",
    "@types/node": "^22.13.10",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "eslint": "^9.23.0",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.1.0",
    "tailwindcss": "^4.1.3"
  }
}
